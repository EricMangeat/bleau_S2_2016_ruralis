<!DOCTYPE html>
<html>
<head>

{#                      Theme Name: Ruralis                     #}
{#               Authors: Marielle Lautrou and Aurore David        #}

    <meta charset="UTF-8" />
    <meta name="description" content="Ruralis Magazine ambitionne de donner à voir les transformations des territoires ruraux en participant de façon volontariste et délibérément optimiste à la réflexion du devenir des campagnes et de leur nouvelle gouvernance."/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
    <title>{% block title %}Ruralis magazine{% endblock %}</title>

    {% block stylesheets %}
        <!--Import Google Icon Font-->
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
        <link rel="stylesheet" href="{{ asset('bundles/ruralis/materialize/css/materialize.css') }}"/>
        <link rel="stylesheet" href="//cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
        <!--Let browser know website is optimized for mobile-->
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ruralis/stylesheets/main.css') }}"/>
    {% endblock %}

    <link rel="icon" type="image/png" href="{{ asset('bundles/ruralis/images/logo.png') }}"/>
</head>
<body>

    {%  block header %}

    <header>
        <div class="row fixed_nav navigation">
            {#First line nav bar#}
            <div class="row first_line">
                <div class="col m1">
                    <div class="row titreRuralis">
                        <div class="col m2">
                            <a href="{{ path ('ruralis_homepage') }}" class="majalla">
                                Ruralis
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m2 majallaSmall">
                            <a href="{{ path ('ruralis_homepage') }}" class="majallaSmall">
                                Magazine
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col m1 logoArbre">
                    <img src="{{ asset ('bundles/ruralis/images/logoarbre1.png') }}" id="animation" alt="Logo arbre" class="smallarbre">
                </div>
                <div id="bottommark"></div>
                <div class="col l6 offset-m1 m6 majallaSmallItalic">
                    Demain s'invente dans les campagnes.
                </div>
                <div class="col m3">
                    <div class="row">
                        <div class="offset-m4 col m2 offset-l6 l2">
                            <a href="https://www.facebook.com/Ruralis-Magazine-488687077922669/?fref=ts">
                                <img src="{{ asset ('bundles/ruralis/images/facebook2.png') }}" class="logoFb" alt="Logo Facebook">
                            </a>
                        </div>
                        <div class="offset-m1 col m2 l2">
                            <a href="https://twitter.com/Ruralismagazine">
                                <img src="{{ asset ('bundles/ruralis/images/twitter2.png') }}" class="logoTw" alt="Logo Twitter">
                            </a>
                        </div>
                        <div class="offset-m1 col m2 l2">
                            <a href="http://www.instagram.com/">
                                <img src="{{ asset ('bundles/ruralis/images/instagram2.png') }}" class="logoIn" alt="Logo Instagram">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div id="second_line_no_scroll" class="row">
                {#Second line nav bar#}
                <div class="row second_line">
                    <ul class="col offset-m3 m9 navlinks">
                        <li><a href="{{ path('ruralis_homepage') }}">Accueil</a></li>
                        <li><a href="{{ path('ruralis_presentation') }}">Blog</a></li>
                        <li><a href="{{ path('ruralis_abonnement') }}">S'abonner</a></li>
                        <li><a href="{{ path('ruralis_partenaire') }}">Partenaires</a></li>
                    </ul>
                </div>
                {#Third line nav bar#}
                <div class="row third_line">
                    <form action="{{ path('ruralis_inscription_newsletter') }}" method="post">
                        <ul class="col offset-m3 m9">
                            <li class="col m2 offset-m1 nl">
                                Newsletter
                            </li>
                            <li class="col m4 input-field mailbox">
                                <input id="email" type="email" class="validate" name="email">
                                <label for="email">Email</label>
                            </li>
                            <li class="col m1">
                                <button class="btn waves-effect waves-light nl" type="submit" name="action">
                                        Ok
                                </button>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
            <div id="second_line_scroll" class="row hide">
                <div class="row second_line">
                    <ul class="col m12 navlinks_on_scroll">
                        <li class="li_nav_menu"><a href="{{ path('ruralis_homepage') }}">Accueil</a></li>
                        <li class="li_nav_menu"><a href="{{ path('ruralis_presentation') }}">Blog</a></li>
                        <li class="li_nav_menu"><a href="{{ path('ruralis_abonnement') }}">S'abonner</a></li>
                        <li class="li_nav_menu"><a href="{{ path('ruralis_partenaire') }}">Partenaires</a></li>
                        <li class="last right">
                            <form action="{{ path('ruralis_inscription_newsletter') }}" method="post">
                                <ul>
                                    <li class="col m3 nl">Newsletter</li>
                                    <li class="col m6 input-field mailbox">
                                        <label for="email">Email</label>
                                        <input id="email" type="email" class="validate" name="email">
                                    </li>
                                    <li class="col m1">
                                        <button class="btn waves-effect waves-light nl" type="submit" name="action">
                                            Ok
                                        </button>
                                    </li>
                                </ul>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <nav class="nav_responsive">
            <div class="nav-wrapper">
                <a href="{{ path('ruralis_homepage') }}" class="brand-logo"><img src="{{ asset('bundles/ruralis/images/logo.png') }}" alt=""></a>
                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                <ul class="side-nav" id="mobile-demo">
                    <li><a href="{{ path('ruralis_homepage') }}">Accueil</a></li>
                    <li><a href="{{ path('ruralis_presentation') }}">Blog</a></li>
                    <li><a href="{{ path('ruralis_abonnement') }}">S'abonner</a></li>
                    <li><a href="{{ path('ruralis_partenaire') }}">Partenaires</a></li>
                </ul>
            </div>
        </nav>
    </header>
    {% endblock %}
    <main>
        {% for flash_message in app.session.flashBag.get('notice') %}
            <div class="row container">
                <div class="flash-notice center">
                    {{ flash_message }}
                </div>
            </div>
        {% endfor %}
        {% block body %}
        {% endblock %}

    </main>

    {% block footer %}
    <footer class="page-footer">
        <div class="row valign-wrapper">
            <div class="col s12 m3 valign">
                <img class="logoruralis" src="{{ asset('bundles/ruralis/images/logo_mini.png') }}" alt="logo">
            </div>
            <div class="col s12 m6 white-text valign">
                <p class="contact">
                    NOUS CONTACTER <br>
                    Association APRIORI / Ruralis Magazine <br>
                    12, rue du Four-Dieu <br>
                    45200 Montargis<br>
                    06 80 73 88 34<br>
                    <a href="mailto:">contact@ruralismagazine.fr</a><br>
                    <a href="#">Mentions légales</a><br>
                    <a href="{{ path('ruralis_admin') }}"><i class="material-icons">lock</i></a>
                </p>
            </div>
            <div class="col s12 m3 valign">
                <a href="http://www.wildcodeschool.fr" target="_blank">
                    <img class="logowcs" src="{{ asset('bundles/ruralis/images/logowcs.png') }}" alt="logo de la Wild Code School" />
                </a>
            </div>
        </div>
    </footer>
    {% endblock footer %}
    {% block javascripts %}
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="//cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="{{ asset('bundles/ruralis/materialize/js/materialize.min.js') }}"></script>
        <script src="{{ asset('bundles/ruralis/javascript/base.js') }}"></script>
        <script src="{{ asset('bundles/ruralis/javascript/blog.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/ruralis/javascript/backgroundColors.js') }}"></script>
        <script>
            var asset = '{{ asset('') }}';
            $(window).scroll(function() {
                if ($(this).scrollTop()>200){
                    $("#second_line_scroll").fadeIn("slow", function() {
                        $(this).removeClass("hide");
                    });
                }
                else if ($(this).scrollTop()>0){
                    $("#second_line_no_scroll").fadeOut();
                }
                else{
                    $("#second_line_no_scroll").fadeIn();
                    $("#second_line_scroll").fadeOut();
                }
            });
            $(".button-collapse").sideNav();

        </script>
    {% endblock %}
</body>
</html>